<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp">

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/two_line_primary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.87"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/two_line_star"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/two_line_secondary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/two_line_primary_text"
        android:layout_gravity="center_vertical"
        android:alpha="0.87"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/two_line_star"
        app:layout_constraintTop_toBottomOf="@id/two_line_primary_text" />

    <ImageView
        android:padding="16dp"
        android:id="@+id/two_line_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_border"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>